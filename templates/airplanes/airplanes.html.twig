{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="./home">Page d'Accueil</a>
        </li>
        <li class="breadcrumb-item active">Avions</li>
    </ol>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-2">
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': "Nom / Designation"}}) }}
        </div>
        <div class="col-2">
            {{ form_row(form.seatsNumber, {'attr': {'class': 'form-control', 'placeholder': "Nombre de place"}}) }}
        </div>
        <div class="col-2">
            <button class="btn btn-primary btn-block" type="submit">Ajouter</button>
        </div>
        <div class="col-6"></div>
    </div>
    {{ form_end(form) }}
    <div class="row" style="margin-top: 20px">
        <div class="col-lg-12">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i> LISTE DES AVIONS
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Nombre de places</th>
                                <th>Date d'achat</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Nom</th>
                                <th>Nombre de places</th>
                                <th>Date d'achat</th>
                                <th>Action</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for airplane in airplanes %}
                                <tr>
                                    <td>{{ airplane.name }}</td>
                                    <td>{{ airplane.seatsNumber }}</td>
                                    <td></td>
                                    <td>
                                        <a class="buttonicon" data-toggle="modal" data-target="#deletemodal"> <i
                                                    class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
